
<div class="header">
    <h1 class="page-header">
        Project Detail
    </h1>
    <ol class="breadcrumb">
        <li><a href="/">All</a></li>
        <li class="active">proj</li>
    </ol>
</div>
<div id="page-inner">
    {{#with project}}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel-body">
                <h1 class="text-center mtop35">{{title}}</h1>
                <p class="text-center auth-row">
                    {{ createTime}}   | <a href="#">{{comments.length}} Comments</a>
                </p>
                <div class="blog-img-wide" style="height: 200px;">
                    <img src="{{image}}" width="100%" style="height: inherit;padding-bottom: 0;">
                </div>
                <hr>
                <div class="status">
                    <div class="project-status">
                        <div class="row">
                            <div class="progress progress-xs col-md-11">
                                <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{percentage}}%"></div>
                            </div>
                            <div class="progress-percentage col-md-1">{{percentage}}%</div>
                        </div>
                        <div class="project-raised">
                            <span class="project-raised-price">$ {{raisedAmount}}</span>
                            <span class="project-raised-label">raised</span>
                        </div>
                    </div>
                    <ul class="project-info">
                        <li class="project-info-unit">
                            <span class="unit-label">Target</span>
                            <span class="unit-figure">$ {{targetAmount}}</span>
                        </li>
                        <li class="project-info-unit">
                            <span class="unit-label">Funders</span>
                            <span class="unit-figure">{{funders.length}}</span>
                        </li>
                        <li class="project-info-unit ">
                            <span class="unit-label">Days left</span>
                            <span class="unit-figure">{{daysLeft}}</span>
                        </li>
                    </ul>
                </div>
                <br>
                <hr>
                {{{description}}}
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn btn-block btn-danger" data-toggle="modal" data-target="#myModal">
                FUND
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="panel-heading">Comments</div>
        <div class="panel-body">
            <ul class="chats normal-chat">
                {{#each comments}}
                    <li class="in">
                        <img src="/images/photos/user1.png" alt="" class="avatar">
                        <div class="message ">
                            <span class="arrow"></span>
                            <a class="name" href="#">{{email}}</a>
                            <span class="datetime">at {{time}}</span>
                                        <span class="body">
                                        {{content}}
                                        </span>
                        </div>
                    </li>
                {{/each}}
            </ul>
            <div class="chat-form ">
                <form action="/comment" class="form-inline" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="content" style="width: 100%" placeholder="Type a message here..." class="form-control">
                        <input type="text" name="projId" value="{{id}}" style="display: none">
                    </div>
                    <input class="btn btn-primary" type="submit" value="Send">
                </form>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/projDetail/{{id}}/fund" class="form-horizontal" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Fund Setting</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <ul class="p-info">
                        <li>
                            <div class="title">Project</div>
                            <div class="desk">{{title}}</div>
                        </li>
                        <li>
                            <div class="title">Total Assets</div>
                            <div class="desk">{{../session.user.totalAssets}}</div>
                        </li>
                        <li>
                            <div class="title">Available Balance</div>
                            <div class="desk">{{../session.user.balance}}</div>
                        </li>
                        <li>
                            <div class="title">Funding Amount</div>
                            <div class="desk"><input name="fundAmount" type="number"></div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" value="submit" class="btn btn-danger">
            </div>
            </form>
        </div>
    </div>
</div>
    {{/with}}