<div class="header">
    <h1 class="page-header">
        Home
    </h1>
    {{{error}}}
    <ol class="breadcrumb">
                <li class="active">All</li>
    </ol>
</div>
<div id="page-inner">
    <div class="row blog">
        {{#each projList}}
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        {{#if ../session.isAdmin}}
                        <h1 class="text-center mtop35">
                            <a href="/raisedDetail/{{id}}">{{title}}</a>
                        </h1>
                        <p class="text-center auth-row">
                            <!--By <a href="#">Anthony Jones</a>   |   27 December 2014   | <a href="#">5 Comments</a>-->
                            {{createTime}}   | <a href="/raisedDetail/{{id}}/#comments">{{ comments.length }} Comments</a>
                        </p>
                        {{else}}
                        <h1 class="text-center mtop35">
                            <a href="/projDetail/{{id}}">{{title}}</a>
                        </h1>
                        <p class="text-center auth-row">
                            <!--By <a href="#">Anthony Jones</a>   |   27 December 2014   | <a href="#">5 Comments</a>-->
                            {{createTime}}   | <a href="/projDetail/{{id}}/#comments">{{ comments.length }} Comments</a>
                        </p>
                        {{/if}}
                        <div class="blog-img-wide" style="height: 200px;">
                            <img src="{{image}}" width="100%" style="height: inherit;padding-bottom: 0;">
                        </div>
                        <p>{{brief}}
                        </p>
                        {{#if ../session.isAdmin}}
                            <a href="/raisedDetail/{{id}}" class="more">Continue Reading</a>
                        {{else}}
                            <a href="/projDetail/{{id}}" class="more">Continue Reading</a>
                        {{/if}}
                        <hr>
                        <div class="status">
                            <div class="project-status">
                                <div class="row">
                                    <div class="col-sm-11">
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{percentage}}%"></div>
                                    </div>
                                    </div>
                                    <div class="progress-percentage col-md-1">{{percentage}}%</div>
                                </div>
                                <div class="project-raised">
                                    <span class="project-raised-price">$ {{ raisedAmount }}</span>
                                    <span class="project-raised-label">     raised</span>
                                </div>
                            </div>
                            <ul class="project-info">
                                <li class="project-info-unit">
                                    <span class="unit-label">Target</span>
                                    <span class="unit-figure">$ {{ targetAmount }}</span>
                                </li>
                                <li class="project-info-unit">
                                    <span class="unit-label">Funders</span>
                                    <span class="unit-figure">{{ fundersCount }}</span>
                                </li>
                                <li class="project-info-unit ">
                                    <span class="unit-label">Days left</span>
                                    <span class="unit-figure">{{daysLeft}}</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
